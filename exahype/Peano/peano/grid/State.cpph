template <class StateData>
bool peano::grid::State<StateData>::storeRegularSubtreesPersistently(int treeDepth) const {
  #ifdef PersistentRegularSubtrees
  return treeDepth >= _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration
      && _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration != -1;
  #else
  return false;
  #endif
}


template <class StateData>
void peano::grid::State<StateData>::holdsPersistentSubtrees( bool value ) {
  #ifdef PersistentRegularSubtrees
  if (
    !value 
    && 
    _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration == _smallestRegularTreeThatIsToBeHeldPersistently
  ) {
    _smallestRegularTreeThatIsToBeHeldPersistently = 0;
  }
  else if (
    _smallestRegularTreeThatIsToBeHeldPersistently>0
    &&
    _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration == _smallestRegularTreeThatIsToBeHeldPersistently
  ) {
    _smallestRegularTreeThatIsToBeHeldPersistently--;
  }
  
  _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration = _smallestRegularTreeThatIsToBeHeldPersistently;
    

  #ifdef Parallel
  if (_loadRebalancingState!=LoadBalancingState::NoRebalancing) {
    _smallestRegularTreeThatIsToBeHeldPersistently                    = -1;
    _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration = -1;
  }
  #endif
  #endif
}


template <class StateData>
void peano::grid::State<StateData>::informAboutFailedRefineOrEraseBecauseOfPersistentSubtrees(int treeDepth) {
  #ifdef PersistentRegularSubtrees
  if ( 
    treeDepth==0 
    &&
    _smallestRegularTreeThatIsToBeHeldPersistently == _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration
  ) {
    _smallestRegularTreeThatIsToBeHeldPersistently = _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration+1;
  }

  /*
  if (
    treeDepth==0 
    &&
    _smallestRegularTreeThatIsToBeHeldPersistently == _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration
  ) {
    _smallestRegularTreeThatIsToBeHeldPersistently = -1;
    _smallestRegularTreeThatIsToBeHeldPersistentlyInPreviousIteration = -1;
  }
*/

  else if (_smallestRegularTreeThatIsToBeHeldPersistently<treeDepth) {
    _smallestRegularTreeThatIsToBeHeldPersistently = treeDepth+1;
  }
  #endif
}


template <class StateData>
void peano::grid::State<StateData>::informToDrainPersistentSubtreesBecauseOfFork() {
  #ifdef PersistentRegularSubtrees
  _smallestRegularTreeThatIsToBeHeldPersistently = -1;
  #endif
}
